before: file("$this")
{
	extern void ldv_call_rcu(struct rcu_head *head, rcu_callback_t func);
	extern void kvfree_call_rcu(struct rcu_head *head, void *ptr)
	extern void ldv_rcu_read_lock(void);
	extern void ldv_rcu_read_unlock(void);
}

around: call(void call_rcu(..))
{
	ldv_call_rcu($arg1, $arg2);
}

around: call(void kvfree_call_rcu(..))
{
	ldv_kvfree_call_rcu($arg1, $arg2);
}

around: call(static inline void rcu_read_lock(void))
{
	ldv_rcu_read_lock();
}

around: call(static inline void rcu_read_unlock(void))
{
	ldv_rcu_read_unlock();
}

around: call(static inline void rcu_read_lock_bh(void))
{
	ldv_rcu_read_lock();
}

around: call(static inline void rcu_read_unlock_bh(void))
{
	ldv_rcu_read_unlock();
}

around: call(static inline void rcu_read_lock_sched(void))
{
	ldv_rcu_read_lock();
}

around: call(static inline void rcu_read_unlock_sched(void))
{
	ldv_rcu_read_unlock();
}
